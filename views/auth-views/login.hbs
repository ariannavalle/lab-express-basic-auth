<div id="form">
    <h2>Login</h2>
    <form action="/auth/login" method="POST">

        <label>Username
            <input type="text" name="username" required />
        </label><br>

        <label>Password
            <input type="password" name="password" required />
        </label><br>

        <button type="submit">Login</button>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
</div>