<h2>Sign up</h2>
<form action="/auth/signup" method="POST">

    <label>
        Username
        <input type="text" name="username" required/>
    </label><br>

    <label>
        Password
        <input type="password" name="password" required/>
    </label><br>

    <button type="submit">Create account</button>

    {{#if errorMessage}}
        <p> {{errorMessage}}</p>
    {{/if}}
</form>